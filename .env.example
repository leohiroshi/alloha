# =================================================================
# ALLOHA - Environment Configuration
# =================================================================

# -----------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------

# Supabase (Novo - Produção)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Firebase (Legacy - será desativado após migração)
FIREBASE_CREDENTIALS_PATH=./alloha-credentials.json

# Migration Control
MIGRATION_MODE=false  # true durante migração paralela
USE_SUPABASE=false    # true após cutover

# -----------------------------------------------------------------
# WHATSAPP CLOUD API
# -----------------------------------------------------------------
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# -----------------------------------------------------------------
# OPENAI API
# -----------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_FINE_TUNED_MODEL=ft:gpt-3.5-turbo-xxxx:your-org:sofia:xxxxx

# -----------------------------------------------------------------
# GOOGLE CALENDAR API (Autonomous Follow-up)
# -----------------------------------------------------------------
GOOGLE_CALENDAR_CREDENTIALS=./google_calendar_credentials.json
GOOGLE_CALENDAR_ID=primary
CALENDAR_TIMEZONE=America/Sao_Paulo

# -----------------------------------------------------------------
# PROPERTY SYNC APIS
# -----------------------------------------------------------------
SCIENSA_API_KEY=your-sciensa-api-key
SCIENSA_API_URL=https://api.sciensa.com/v1
SINCRONIZA_IMOVEIS_API_KEY=your-sincroniza-api-key
SINCRONIZA_IMOVEIS_API_URL=https://api.sincronizaimoveis.com.br

# -----------------------------------------------------------------
# WHITE-LABEL SYSTEM
# -----------------------------------------------------------------
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_ACCOUNT_ID=your-account-id

# -----------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------------------------------------------------------
# PERFORMANCE TUNING
# -----------------------------------------------------------------
EMBEDDING_CACHE_TTL_DAYS=30
MESSAGE_TTL_DAYS=90
WEBHOOK_IDEMPOTENCY_TTL_HOURS=24
MAX_CONCURRENT_REQUESTS=100

# -----------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------
ENVIRONMENT=production  # development, staging, production
DEBUG=false
RELOAD=false

# -----------------------------------------------------------------
# OPTIONAL: Feature Flags
# -----------------------------------------------------------------
ENABLE_VOICE_PTT=true
ENABLE_URGENCY_ALERTS=true
ENABLE_AUTONOMOUS_FOLLOWUP=true
ENABLE_LIVE_PRICING=true
ENABLE_WHITE_LABEL=true
