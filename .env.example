# Alloha WhatsApp Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=alloha_secret
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# AI Service Configuration
ABACUS_API_KEY=your_abacus_api_key_here
AI_PROVIDER=abacus

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Application Configuration
SECRET_KEY=your_secret_key_here
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# Azure Configuration (for deployment)
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_RESOURCE_GROUP=rg-alloha-prod
AZURE_CONTAINER_APP=alloha-backend
