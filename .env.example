# =============================================================================
# Alloha - Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (PostgreSQL + pgvector)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# -----------------------------------------------------------------------------
# OpenAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-4.1-mini-2025-04-14
OPENAI_EMBED_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# WhatsApp Business API
# -----------------------------------------------------------------------------
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# -----------------------------------------------------------------------------
# Redis (Optional - for caching/rate limiting)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# -----------------------------------------------------------------------------
# Local LLM Sidecar (MoE Architecture - Optional)
# -----------------------------------------------------------------------------
ENABLE_LOCAL_MOE=false
LOCAL_LLM_HOST=http://llm-sidecar:8081
LOCAL_LLM_MODEL=llama3-3b-instruct-q4
LOCAL_LLM_TIMEOUT_SECONDS=25
ROUTER_CONFIDENCE_THRESHOLD=0.7
FALLBACK_QUALITY_MIN_SCORE=0.55

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_GOOGLE_CALENDAR=false
ENABLE_VOICE_SYSTEM=false
MULTI_CTA_MODE=true
MAX_CTA_PER_RESPONSE=3
