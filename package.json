{
  "name": "alloha",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "turbo run build",
    "build:web": "npm run build --workspace=apps/web",
    "lint": "turbo run lint",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "cd apps/api && uvicorn app.main:app --host 0.0.0.0 --port 8000"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
